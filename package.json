{
  "name": "oc-ralph",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/oc-ralph",
  "bin": {
    "oc-ralph": "dist/oc-ralph"
  },
  "scripts": {
    "build": "bun run build:compile",
    "build:compile": "bun build src/index.tsx --compile --no-compile-autoload-bunfig --no-compile-autoload-dotenv --outfile dist/oc-ralph",
    "postinstall": "bun run build && chmod +x dist/oc-ralph",
    "start": "bun run src/index.tsx",
    "dev": "bun --watch run src/index.tsx",
    "test": "bun test"
  },
  "dependencies": {
    "@opencode-ai/sdk": "latest",
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "bun-pty": "^0.4.8",
    "ghostty-opentui": "latest",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "typescript": "^5"
  }
}
